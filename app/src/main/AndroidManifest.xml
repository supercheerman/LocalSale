<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.localsale">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".ui.register.RegisterActivity">

        </activity>
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.orderPlesk.OrderActivity"/>
        <activity android:name=".ui.addressPlesk.AddressPickerActivity">

        </activity>
        <activity android:name=".ui.addressPlesk.AddAddressActivity"/>
        <activity android:name=".ui.TimePlesk.DeliverTimePickerActivity"
            android:theme="@style/MyToolsAddAvatar">

        </activity>
        <activity android:name=".ui.TotalOrderPlesk.TotalOrderActivity"/>

    </application>

</manifest>